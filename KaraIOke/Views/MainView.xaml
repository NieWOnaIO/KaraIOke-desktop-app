<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:KaraIOke.Views"
             xmlns:viewmodels="clr-namespace:KaraIOke.ViewModels"
             x:Class="KaraIOke.Views.MainView"
             x:DataType="viewmodels:MainViewModel"
             BackgroundColor="#121212"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Label
            Grid.Row="1"
            Text="KaraIOke"
            TextColor="#AAAAAA"
            FontSize="40"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1"/>


        <HorizontalStackLayout
            Grid.Row="3"
            HorizontalOptions="Center">

            <Entry
                x:Name="TextEditor"
                Text="{Binding SongName}"
                Placeholder="Szukaj piosenki..."
                FontSize="32"
                HorizontalTextAlignment="Center"
                WidthRequest="472"
                HeightRequest="60"/>

            <Button
                x:Name="SearchBtn"
                Command="{Binding SearchForSong}"
                Text="Szukaj"
                CornerRadius="0"
                Padding="0"
                FontSize="32"
                WidthRequest="168"
                HeightRequest="60"/>

        </HorizontalStackLayout>

        <Button
            Grid.Row="5"
            x:Name="GoToPlaylistBtn"
            Command="{Binding GoToPlaylistList}"
            CornerRadius="0"
            FontSize="32"
            WidthRequest="400"
            Text="Playlisty"
            VerticalOptions="End"
            HeightRequest="60"
            HorizontalOptions="Center"/>

    </Grid>
</ContentPage>