<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:KaraIOke.Controls"
             x:Class="KaraIOke.SearchPage"
             BackgroundColor="#121212"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <HorizontalStackLayout
            Grid.Row="0"
            HorizontalOptions="Center">

            <Entry
                x:Name="TextEditor"
                Placeholder="Szukaj piosenki..."
                FontSize="32"
                HorizontalTextAlignment="Center"
                WidthRequest="472"
                HeightRequest="60"/>

            <Button
                x:Name="SearchBtn"
                Text="Szukaj"
                CornerRadius="0"
                Padding="0"
                FontSize="32"
                WidthRequest="168"
                HeightRequest="60"/>

        </HorizontalStackLayout>

        <ScrollView Grid.Row="1" WidthRequest="950">
            <StackLayout>
        <controls:SearchSongView 
                SongName="Piosenka 1"/>
        <controls:SearchSongView 
                SongName="Piosenka 2"/>
        <controls:SearchSongView 
                SongName="Piosenka 3"/>
        <controls:SearchSongView 
                SongName="Piosenka 4"/>
        <controls:SearchSongView 
                SongName="Piosenka 5"/>

            </StackLayout>

        </ScrollView>

        <Button
            Grid.Row="2"
            x:Name="BackBtn"
            Clicked="OnBackBtnClicked"
            CornerRadius="0"
            FontSize="32"
            WidthRequest="265"
            HeightRequest="60"
            Text="PowrÃ³t"
            Margin="0,0,150,0"
            HorizontalOptions="End"/>

    </Grid>
</ContentPage>